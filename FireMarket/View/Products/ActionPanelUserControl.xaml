<UserControl x:Class="FireMarket.View.Products.ActionPanelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FireMarket.View.Products"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button Command="{Binding Add}" Content="Добавить товар"
                Grid.Column="0"/>
        <Button Command="{Binding Edit}" Content="Сохранить изменения"
                Grid.Column="1"/>
        <Button Command="{Binding Remove}" Content="Удалить товар"
                Grid.Column="2"/>    
    </Grid>
</UserControl>
